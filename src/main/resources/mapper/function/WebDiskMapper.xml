<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.framework.dao.function.WebDiskMapper">
    <resultMap id="BaseResultMap" type="com.framework.entity.function.WebDisk">
        <id column="id" property="id"/>
        <result column="file_name" property="fileName"/>
        <result column="file_size" property="fileSize"/>
        <result column="storage_path" property="storagePath"/>
        <result column="remark" property="remark"/>
        <result column="user_id" property="userId"/>
        <result column="upload_by" property="uploadBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, file_name, file_size, storage_path, remark, user_id, upload_by, create_time, update_time
    </sql>

    <select id="selectWebDiskList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from web_disk
        where user_id = #{userId, jdbcType=VARCHAR} and user_id is null
        <if test="searchContent != null and searchContent != ''">
            and (file_name like concat('%',#{searchContent},'%') or remark like concat('%',#{searchContent},'%'))
        </if>
    </select>

</mapper>